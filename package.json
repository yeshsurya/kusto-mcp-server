{
  "name": "kusto-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Azure Data Explorer Kusto CLI - Query and manage Kusto clusters with AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "kusto-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "kusto",
    "azure",
    "azure-data-explorer",
    "kql",
    "ai-tools",
    "claude",
    "copilot",
    "adx"
  ],
  "author": "yeshsurya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeshsurya/kusto-mcp-server.git"
  },
  "homepage": "https://github.com/yeshsurya/kusto-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/yeshsurya/kusto-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
